<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    >
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/nav"
        android:layout_alignParentTop="true">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/menu"
        android:id="@+id/menu_right"
        android:layout_alignParentRight="true"

        android:padding="30dp"/>
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_baseline_add_24"
            android:padding="15dp"
            android:layout_margin="15dp"
            android:background="@drawable/tint"
            android:id="@+id/add_product"/>

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:id="@+id/shop_card"
        android:layout_margin="20dp"
        android:layout_below="@id/nav"
        android:background="@drawable/accentbtn"

        android:clipChildren="true"
        android:padding="0dp">



        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:id="@+id/bag"
            android:src="@drawable/ic_bag"
            android:layout_alignParentRight="true"
            android:layout_margin="40dp"/>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:id="@+id/shop_open"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:layout_margin="20dp"
            android:paddingStart="15dp"
            android:paddingEnd="15dp"
            android:paddingBottom="10dp"
            android:paddingTop="10dp"
            android:background="@drawable/white_back">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:textColor="@color/colorPrimaryDark"
                android:text="View Shop"/>
            <ImageView
                android:layout_width="15dp"
                android:layout_gravity="center"
                android:layout_height="15dp"
                android:layout_marginStart="10dp"
                android:src="@drawable/right_arrow_white"/>
        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Shop"
            android:id="@+id/shop_name"
            android:layout_margin="40dp"
            android:layout_toLeftOf="@id/bag"
            android:layout_alignParentLeft="true"
            android:textSize="20dp"
            android:textColor="@android:color/white"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_margin="40dp"
            android:textSize="15dp"
            android:text="Address"
            android:id="@+id/shop_address"
            android:layout_toLeftOf="@id/shop_open"
            android:textColor="@android:color/white"/>

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_below="@id/shop_card"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:layout_marginTop="10dp"
            android:id="@+id/inventory"
            android:layout_marginBottom="10dp"
            android:orientation="horizontal">
            <ImageView
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:background="@drawable/tint"
                android:padding="20dp"
                android:src="@drawable/ic_inven"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Inventory"
                android:layout_gravity="center"
                android:layout_marginStart="20dp"
                android:textColor="@color/colorPrimaryDark"/>

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"            android:orientation="horizontal">
            <ImageView
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:background="@drawable/tint"
                android:padding="20dp"
                android:src="@drawable/ic_analytics"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Analytics"
                android:layout_gravity="center"
                android:layout_marginStart="20dp"
                android:textColor="@color/colorPrimaryDark"/>

        </LinearLayout>

    </LinearLayout>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/accentbtn"
        android:id="@+id/scanbtn"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="50dp"
        android:paddingStart="20dp"
        android:paddingEnd="20dp"
        android:paddingTop="15dp"
        android:paddingBottom="15dp"
        android:layout_centerHorizontal="true"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@android:color/white"
            android:textSize="14dp"
            android:layout_centerVertical="true"
            android:id="@+id/btn_text"
            android:text="Start Billing"/>
        <ImageView
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_marginStart="20dp"
            android:src="@drawable/ic_scanner"
            android:layout_toRightOf="@id/btn_text"/>

    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#32000000"
        android:visibility="invisible"
        android:id="@+id/cover"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:visibility="invisible"
        android:layout_height="wrap_content"
        android:background="@drawable/bottom_menu"
        android:id="@+id/bottom_menu"
        android:layout_alignParentBottom="true"
        android:paddingTop="20dp"
        android:paddingBottom="15dp"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Profile"
            android:id="@+id/profile"
            android:padding="15dp"
            android:layout_centerHorizontal="true"
            android:textColor="@android:color/black"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Setting"
            android:id="@+id/setting"
            android:layout_below="@id/profile"
            android:padding="15dp"
            android:layout_centerHorizontal="true"
            android:textColor="@android:color/black"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Help"
            android:id="@+id/help"
            android:layout_below="@id/setting"
            android:padding="15dp"
            android:layout_centerHorizontal="true"
            android:textColor="@android:color/black"
            />

    </RelativeLayout>

</RelativeLayout>